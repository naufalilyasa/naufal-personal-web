    </div>
    <!-- Card -->
    <div class="container p-0 mt-md-2 mt-lg-0 card-container">
      <div class="card mx-auto card-container justify-content-center align-items-center shadow">
        <img src="/assets/img/IMG-20250122-WA0006.jpg" alt="User Image" class="card-img-top" />
        <div class="card-body">
          <h2 class="card-title text-center fs-3 fw-bold">
            Achmad Naufal Ilyasa
          </h2>
          <p class="card-text text-center">Fullstack Developer</p>
        </div>
      </div>
    </div>
  </div>
</main>
