{{#> layout currentPage = "blogs"}}
<!-- Edit Blog -->
<main class="container blog-form-container mt-5">
  <form action="/blog-update/{{blog.id}}?_method=PUT" method="post" enctype="multipart/form-data" class="create-blog-form">
    <h1 class="text-center">Edit Blog</h1>

    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        {{messages.success}}
      </div>
    {{/if}}
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" id="title" class="form-control" value="{{blog.title}}" />
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea name="content" id="content" class="form-control" rows="7">{{blog.content}}</textarea>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input type="file" name="image" id="image" class="form-control" value="{{blog.image}}" />
    </div>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-primary px-3">Submit</button>
    </div>
  </form>
</main>
{{/layout}}