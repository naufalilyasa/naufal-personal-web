{{#> layout currentPage = "blogs"}}

<!-- Blog Detail -->
<article class="container blog-detail-container my-5">
  <div class="d-flex flex-column gap-3">
    <h1 class="text-center mb-3">{{blog.title}}</h1>

    <p>{{formatDateToWIB blog.createdAt}} | {{this.userData.name}}</p>

    <img src="{{blog.image}}" alt="In the classroom" class="blog-detail-img" />

    <p>
      {{blog.content}}
    </p>
  </div>
</article>
{{/layout}}