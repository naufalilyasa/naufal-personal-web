{{#> layout currentPage = "blogs"}}
<!-- Create Blog -->
<main class="container">
  <form action="/blog-create" method="post" class="create-blog-form" onsubmit="">
    <h1>Create Blog</h1>

    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" id="title" class="form-control" />
    </div>
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea name="content" id="content" class="form-control" rows="7"></textarea>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input type="file" name="iamge" id="image" class="form-control" />
    </div>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-primary px-3">Submit</button>
    </div>
  </form>
</main>

{{/layout}}