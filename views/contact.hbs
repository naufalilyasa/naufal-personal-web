{{#> layout currentPage = 'contact'}}
<!-- Form Contact -->
<main class="container form-contact-container mt-3">
  <div class="d-flex flex-column gap-3">
    <h1 class="text-center">GET IN TOUCH</h1>
    <form action="" class="d-flex flex-column gap-3" onsubmit="submitContactForm(event)">
      <div class="form-field">
        <label for="name">Name</label>
        <input type="text" id="name" class="form-control border-3" />
      </div>

      <div class="form-field">
        <label for="email">Email</label>
        <input type="text" id="email" class="form-control border-3" />
      </div>

      <div class="form-field">
        <label for="number">Phone Number</label>
        <input type="text" id="number" class="form-control border-3" />
      </div>

      <div class="form-field">
        <label for="subject">Subject</label>
        <select type="select" id="subject" class="form-select border-3" >
          <option value="Kerja Sama">Kerja Sama</option>
          <option value="Berkenalan">Berkenalan</option>
        </select>
      </div>

      <div class="form-field">
        <label for="massege">Massege</label>
        <textarea name="" id="massege" rows="7" class="form-control border-3"></textarea>
      </div>

      <div class="d-flex justify-content-end mb-3">
        <button class="btn btn-primary" onclick="submitContactForm()">Submit</button>
      </div>
    </form>
  </div>
</main>
<script src="/assets/js/contact.js"></script>
{{/layout}}